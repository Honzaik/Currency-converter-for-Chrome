{
  "manifest_version": 3,

  "name": "Currency converter by Honzaik",
  "short_name" : "Currency converter",
  "description": "You can easily convert any currency via this extension.",
  "version": "1.4",

  "action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://floatrates.com/daily/usd.json"
  ]
}